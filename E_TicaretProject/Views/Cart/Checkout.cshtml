
@{
    ViewData["Title"] = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model E_TicaretProject.Models.ShippingDetails

<header class="header">
    <div class="header__top">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6">
                </div>
                <div class="col-lg-6 col-md-6">
                    <div class="header__top__right">
                        @if (ViewBag.UserName != null)
                        {
                            <div class="header__top__right__auth">
                                <h5>@ViewBag.UserName</h5>
                            </div>
                            <div class="header__top__right__auth">
                                <a href="/Account/Logout"><i class="fa fa-user"></i> Çıkış Yap</a>
                            </div>
                        }
                        else
                        {
                            <div class="header__top__right__auth">
                                <a href="/Account/Login"><i class="fa fa-user"></i> Giriş Yap</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="header__logo">
                    <a href="/Home/index"><img src="/Image/iconfinder_social-circle-google-plus_682223.png" alt=""></a>
                </div>
            </div>
            <div class="col-lg-6">
                <nav class="header__menu">
                    <ul>
                        <li class="active"><a href="/Home/index">Anasayfa</a></li>
                        <li><a href="#">Ürünler</a></li>
                        <li>
                            <a href="/Template/#">Sayfalar</a>

                        </li>

                        <li><a href="#">İletişim</a></li>
                    </ul>
                </nav>
            </div>
            <div class="col-lg-3">

            </div>
        </div>
        <div class="humberger__open">
            <i class="fa fa-bars"></i>
        </div>
    </div>
</header>


@if (ViewBag.Message != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Hata!</strong> @ViewBag.Message
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="span9">
    <table class="table table-responsive-md">
        <tr><th> Lütfen Adres Bilgilerini Doldurunuz </th></tr>
        <tr>
            <td>

                @using (Html.BeginForm("Checkout", "Cart", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()


                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="control-group">
                        <label class="control-label" for="inputUsername">Adres Başlığı</label>
                        <div class="controls">
                            <input type="hidden" value="@ViewBag.UserName" name="USerName" />
                            @Html.EditorFor(model => model.AdresBasligi, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.AdresBasligi, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="inputUsername">Adres</label>
                        <div class="controls">
                            @Html.EditorFor(model => model.Adres, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Adres, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="inputUsername">Şehir</label>
                        <div class="controls">
                            @Html.EditorFor(model => model.Sehir, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Sehir, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="inputUsername">Semt</label>
                        <div class="controls">
                            @Html.EditorFor(model => model.Semt, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Semt, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="inputUsername">Mahalle</label>
                        <div class="controls">
                            @Html.EditorFor(model => model.Mahalle, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Mahalle, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="inputUsername">Posta Kodu</label>
                        <div class="controls">
                            @Html.EditorFor(model => model.PosteKodu, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.PosteKodu, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="controls">
                            <button type="submit" class="btn btn-success">Kaydet</button>
                        </div>
                    </div>

                }
            </td>
        </tr>
    </table>

</div>




