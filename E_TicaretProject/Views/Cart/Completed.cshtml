
@{
    ViewData["Title"] = "Complated";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<header class="header">
    <div class="header__top">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6">
                </div>
                <div class="col-lg-6 col-md-6">
                    <div class="header__top__right">
                        @if (ViewBag.UserName != null)
                        {
                            <div class="header__top__right__auth">
                                <h5>@ViewBag.UserName</h5>
                            </div>
                            <div class="header__top__right__auth">
                                <a href="/Account/Logout"><i class="fa fa-user"></i> Çıkış Yap</a>
                            </div>
                        }
                        else
                        {
                            <div class="header__top__right__auth">
                                <a href="/Account/Login"><i class="fa fa-user"></i> Giriş Yap</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="header__logo">
                    <a href="/Home/index"><img src="/Image/iconfinder_social-circle-google-plus_682223.png" alt=""></a>
                </div>
            </div>
            <div class="col-lg-6">
                <nav class="header__menu">
                    <ul>
                        <li class="active"><a href="/Home/index">Anasayfa</a></li>
                        <li><a href="#">Ürünler</a></li>
                        <li>
                            <a href="/Template/#">Sayfalar</a>

                        </li>

                        <li><a href="#">İletişim</a></li>
                    </ul>
                </nav>
            </div>
            <div class="col-lg-3">

            </div>
        </div>
        <div class="humberger__open">
            <i class="fa fa-bars"></i>
        </div>
    </div>
</header>

<div class="span9">

    <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <strong>Başarılı !</strong> Satın aldığınız ürünler en kısa zamanda kargoya verilecektir.
    </div>

</div>

